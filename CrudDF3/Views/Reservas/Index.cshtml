@model IEnumerable<CrudDF3.Models.Reserva>

@{
    ViewData["Title"] = "Gestión de Reservas";
    Layout = "_Layout";
}

<div class="container mt-4">
    <div class="card border-0 shadow-sm">
        <div class="card-header bg-white border-bottom">
            <div class="d-flex justify-content-between align-items-center py-2">
                <h3 class="h5 mb-0">Reservas del Hotel</h3>
                <a asp-action="Create" class="btn btn-outline-primary btn-sm">
                    <i class="fas fa-plus me-1"></i> Nueva Reserva
                </a>
            </div>
        </div>

        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="bg-light">
                        <tr>
                            <th class="py-3">Periodo</th>
                            <th class="py-3">Huésped</th>
                            <th class="py-3">Habitación</th>
                            <th class="py-3 text-end">Valor</th>
                            <th class="py-3 text-center">Estado</th>
                            <th class="py-3 text-end">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr class="border-top">
                                <td class="align-middle">
                                    <div class="fw-medium">
                                        @(item.FechaInicial?.ToString("dd MMM yyyy") ?? "N/A") -
                                        @(item.FechaFinal?.ToString("dd MMM yyyy") ?? "N/A")
                                    </div>
                                    <div class="small text-muted">@(item.NumeroPersonas?.ToString() ?? "0") personas</div>
                                </td>
                                <td class="align-middle">
                                    <div class="fw-medium">
                                        @(item.IdHuespedNavigation != null ?
                                            $"{item.IdHuespedNavigation.NombreHuesped} {item.IdHuespedNavigation.ApellidoHuesped}" :
                                            "N/A")
                                    </div>
                                    <div class="small text-muted">
                                        Reserva: @(item.FechaReserva?.ToString("dd/MM/yyyy") ?? "N/A")
                                    </div>
                                </td>
                                <td class="align-middle">
                                    Hab. @(item.IdHabitacionNavigation?.TipoHabitacion ?? "N/A")
                                </td>
                                <td class="align-middle text-end">
                                    <div class="fw-medium">@(item.Valor?.ToString("C") ?? "N/A")</div>
                                    <div class="small text-muted">Anticipo: @(item.Anticipo?.ToString("C") ?? "N/A")</div>
                                </td>
                                <td class="align-middle text-center">
                                    @if (item.EstadoReserva)
                                    {
                                        <span class="badge bg-success bg-opacity-10 text-success">
                                            <i class="fas fa-check-circle me-1"></i> Confirmada
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger bg-opacity-10 text-danger">
                                            <i class="fas fa-times-circle me-1"></i> Cancelada
                                        </span>
                                    }
                                </td>
                                <td class="align-middle text-end">
                                    <div class="btn-group btn-group-sm" role="group">
                                        <a asp-action="Edit" asp-route-id="@item.IdReserva"
                                           class="btn btn-outline-secondary" title="Editar">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a asp-action="Details" asp-route-id="@item.IdReserva"
                                           class="btn btn-outline-secondary" title="Detalles">
                                            <i class="fas fa-info-circle"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.IdReserva"
                                           class="btn btn-outline-danger" title="Cancelar">
                                            <i class="fas fa-times"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<style>
    .card {
        border-radius: 0.5rem;
        overflow: hidden;
    }

    .table {
        font-size: 0.875rem;
    }

        .table th {
            font-weight: 500;
            text-transform: uppercase;
            letter-spacing: 0.5px;
            font-size: 0.75rem;
            color: #6c757d;
        }

    .badge {
        font-weight: 400;
        padding: 0.35em 0.65em;
        font-size: 0.75em;
    }

    tr:hover {
        background-color: #f8f9fa;
    }

    .btn-outline-secondary {
        border-color: #dee2e6;
    }

        .btn-outline-secondary:hover {
            background-color: #f8f9fa;
        }

    .fw-medium {
        font-weight: 500;
    }
</style>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('[title]').tooltip();
        });
    </script>
}