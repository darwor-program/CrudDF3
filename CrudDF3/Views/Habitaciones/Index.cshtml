@model IEnumerable<CrudDF3.Models.Habitacione>

@{
    ViewData["Title"] = "Administración de Habitaciones";
    Layout = "_Layout";
}

<div class="container-fluid px-4 py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="mb-0">
            <i class="fas fa-bed me-2"></i>@ViewData["Title"]
        </h2>
        <a asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus-circle me-2"></i>Nueva Habitación
        </a>
    </div>

    <div class="card shadow-sm border-0">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="bg-light">
                        <tr>
                            <th class="ps-4">Tipo</th>
                            <th>Capacidad</th>
                            <th>Estado</th>
                            <th>Descripción</th>
                            <th class="text-end">Tarifa</th>
                            <th>Características</th>
                            <th class="pe-4 text-end">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr class="border-top">
                                <td class="ps-4">
                                    <div class="fw-semibold">@item.TipoHabitacion</div>
                                </td>
                                <td>
                                    <span class="badge bg-primary bg-opacity-10 text-primary">
                                        @item.CapacidadHuespedes <i class="fas fa-user ms-1"></i>
                                    </span>
                                </td>
                                <td>
                                    @if (item.EstadoHabitacion)
                                    {
                                        <span class="badge bg-success bg-opacity-10 text-success">
                                            <i class="fas fa-check-circle me-1"></i> Disponible
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger bg-opacity-10 text-danger">
                                            <i class="fas fa-times-circle me-1"></i> Ocupada
                                        </span>
                                    }
                                </td>
                                <td>
                                    <div class="text-muted text-truncate" style="max-width: 200px;">
                                        @item.DescripcionHabitacion
                                    </div>
                                </td>
                                <td class="text-end fw-medium">
                                    @(item.TarifaHabitacion?.ToString("C") ?? "N/A")
                                </td>
                                <td>
                                    <div class="text-truncate" style="max-width: 200px;">
                                        @item.CaracteristicasHabitacion
                                    </div>
                                </td>
                                <td class="pe-4 text-end">
                                    <div class="btn-group btn-group-sm shadow-sm" role="group">
                                        <a asp-action="Details" asp-route-id="@item.IdHabitacion"
                                           class="btn btn-outline-primary" title="Ver detalles">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@item.IdHabitacion"
                                           class="btn btn-outline-secondary" title="Editar">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.IdHabitacion"
                                           class="btn btn-outline-danger" title="Eliminar">
                                            <i class="fas fa-trash-alt"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .card {
            border-radius: 0.5rem;
            overflow: hidden;
        }

        .table {
            font-size: 0.9rem;
        }

            .table th {
                font-weight: 500;
                text-transform: uppercase;
                letter-spacing: 0.5px;
                font-size: 0.75rem;
                color: #6c757d;
                background-color: #f8f9fa;
            }

        .badge {
            font-weight: 400;
            padding: 0.35em 0.65em;
            font-size: 0.75em;
            border-radius: 0.25rem;
        }

        .text-truncate {
            white-space: nowrap;
            overflow: hidden;
            text-overflow: ellipsis;
        }

        .fw-semibold {
            font-weight: 500;
        }

        .btn-group-sm > .btn {
            padding: 0.25rem 0.5rem;
        }

        tr:hover {
            background-color: #f8f9fa;
        }
    </style>
}

@section Scripts {
    <script>
        $(document).ready(function() {
            $('[title]').tooltip();
        });
    </script>
}