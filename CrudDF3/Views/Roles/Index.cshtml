@model IEnumerable<CrudDF3.Models.Role>

@{
    ViewData["Title"] = "Gestión de Roles";
    Layout = "_Layout";
}

<div class="container mt-4">
    <div class="card border-0 shadow-sm">
        <div class="card-header bg-white border-bottom">
            <div class="d-flex justify-content-between align-items-center py-2">
                <h3 class="h5 mb-0">Administración de Roles</h3>
                <a asp-action="Create" class="btn btn-outline-primary btn-sm">
                    <i class="fas fa-plus me-1"></i> Nuevo Rol
                </a>
            </div>
        </div>

        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="bg-light">
                        <tr>
                            <th class="py-3 ps-4">Nombre del Rol</th>
                            <th class="py-3">Descripción</th>
                            <th class="py-3 text-center">Estado</th>
                            <th class="py-3 pe-4 text-end">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr class="border-top">
                                <td class="align-middle ps-4">
                                    <strong>@Html.DisplayFor(modelItem => item.NombreRol)</strong>
                                </td>
                                <td class="align-middle">
                                    <div class="text-muted" style="max-width: 300px;">
                                        @Html.DisplayFor(modelItem => item.DescripcionRol)
                                    </div>
                                </td>
                                <td class="align-middle text-center">
                                    @if (item.EstadoRol)
                                    {
                                        <span class="badge bg-success bg-opacity-10 text-success">
                                            <i class="fas fa-check-circle me-1"></i> Activo
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger bg-opacity-10 text-danger">
                                            <i class="fas fa-times-circle me-1"></i> Inactivo
                                        </span>
                                    }
                                </td>
                                <td class="align-middle pe-4 text-end">
                                    <div class="btn-group btn-group-sm" role="group">
                                        <a asp-action="Edit" asp-route-id="@item.IdRol"
                                           class="btn btn-outline-secondary" title="Editar">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a asp-action="Details" asp-route-id="@item.IdRol"
                                           class="btn btn-outline-secondary" title="Detalles">
                                            <i class="fas fa-info-circle"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.IdRol"
                                           class="btn btn-outline-danger" title="Eliminar">
                                            <i class="fas fa-trash-alt"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<style>
    .card {
        border-radius: 0.5rem;
        overflow: hidden;
    }

    .table {
        font-size: 0.875rem;
    }

        .table th {
            font-weight: 500;
            text-transform: uppercase;
            letter-spacing: 0.5px;
            font-size: 0.75rem;
            color: #6c757d;
        }

    .badge {
        font-weight: 400;
        padding: 0.35em 0.65em;
        font-size: 0.75em;
    }

    tr:hover {
        background-color: #f8f9fa;
    }

    .btn-outline-secondary {
        border-color: #dee2e6;
    }

        .btn-outline-secondary:hover {
            background-color: #f8f9fa;
        }
</style>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('[title]').tooltip();
        });
    </script>
}