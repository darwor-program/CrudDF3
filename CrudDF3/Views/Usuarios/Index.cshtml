@model IEnumerable<CrudDF3.Models.Usuario>

@{
    ViewData["Title"] = "Gestión de Usuarios";
    Layout = "_Layout";
}

<div class="admin-container">
    <div class="card shadow-lg">
        <div class="card-header bg-hotel-primary text-white">
            <div class="d-flex justify-content-between align-items-center">
                <h3 class="mb-0"><i class="fas fa-users-cog me-2"></i>Gestión de Usuarios del Hotel</h3>
                <a asp-action="Create" class="btn btn-hotel-success">
                    <i class="fas fa-user-plus me-1"></i> Nuevo Usuario
                </a>
            </div>
        </div>

        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover table-striped" id="usuariosTable">
                    <thead class="table-dark">
                        <tr>
                            <th><i class="fas fa-id-card"></i> Cédula</th>
                            <th><i class="fas fa-user"></i> Nombre</th>
                            <th><i class="fas fa-user"></i> Apellido</th>
                            <th><i class="fas fa-envelope"></i> Email</th>
                            <th><i class="fas fa-user-shield"></i> Rol</th>
                            <th><i class="fas fa-calendar-alt"></i> Registro</th>
                            <th><i class="fas fa-toggle-on"></i> Estado</th>
                            <th class="text-end"><i class="fas fa-cog"></i> Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@(item.CedulaUsuario?.ToString() ?? "N/A")</td>
                                <td>@(item.NombreUsuario ?? "N/A")</td>
                                <td>@(item.ApellidoUsuario ?? "N/A")</td>
                                <td>@(item.CorreoUsuario ?? "N/A")</td>
                                <td>
                                    <span class="badge bg-role-@(item.IdRolNavigation?.IdRol.ToString() ?? "0")">
                                        @(item.IdRolNavigation?.NombreRol ?? "Sin rol")
                                    </span>
                                </td>
                                <td>@(item.FechaCreacion?.ToString("dd/MM/yyyy") ?? "N/A")</td>
                                <td>
                                    @if (item.EstadoUsuario)
                                    {
                                        <span class="badge bg-success"><i class="fas fa-check-circle"></i> Activo</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger"><i class="fas fa-times-circle"></i> Inactivo</span>
                                    }
                                </td>
                                <td class="text-end">
                                    <div class="btn-group" role="group">
                                        <a asp-action="Edit" asp-route-id="@item.IdUsuario" class="btn btn-sm btn-hotel-warning"
                                           data-bs-toggle="tooltip" title="Editar">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a asp-action="Details" asp-route-id="@item.IdUsuario" class="btn btn-sm btn-hotel-info"
                                           data-bs-toggle="tooltip" title="Detalles">
                                            <i class="fas fa-info-circle"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.IdUsuario" class="btn btn-sm btn-hotel-danger"
                                           data-bs-toggle="tooltip" title="Eliminar">
                                            <i class="fas fa-trash-alt"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<!-- Resto del código de estilos y scripts permanece igual -->