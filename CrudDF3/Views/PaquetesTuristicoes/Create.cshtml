@model CrudDF3.Models.PaquetesTuristico

@{
    ViewData["Title"] = "Crear";
}

<h1>Crear</h1>

<h4>Paquete Turístico</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NombrePaquete" class="control-label"></label>
                <input asp-for="NombrePaquete" class="form-control" />
                <span asp-validation-for="NombrePaquete" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DescripcionPaquete" class="control-label"></label>
                <input asp-for="DescripcionPaquete" class="form-control" />
                <span asp-validation-for="DescripcionPaquete" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PrecioPaquete" class="control-label"></label>
                <input asp-for="PrecioPaquete" class="form-control" />
                <span asp-validation-for="PrecioPaquete" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="DisponibilidadPaquete" /> @Html.DisplayNameFor(model => model.DisponibilidadPaquete)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="FechaPaquete" class="control-label"></label>
                <input asp-for="FechaPaquete" class="form-control" />
                <span asp-validation-for="FechaPaquete" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DestinoPaquete" class="control-label"></label>
                <input asp-for="DestinoPaquete" class="form-control" />
                <span asp-validation-for="DestinoPaquete" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="EstadoPaquete" /> @Html.DisplayNameFor(model => model.EstadoPaquete)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="TipoViajePaquete" class="control-label"></label>
                <input asp-for="TipoViajePaquete" class="form-control" />
                <span asp-validation-for="TipoViajePaquete" class="text-danger"></span>
            </div>

            <!-- Selección de Servicios (Multiselección) -->
            <div class="form-group">
                <label for="SelectedServicios">Servicios</label>
                <select asp-for="PaqueteServicios" class="form-control" multiple="multiple">
                    @foreach (var servicio in ViewData["Servicios"] as SelectList)
                    {
                        <option value="@servicio.Value">@servicio.Text</option>
                    }
                </select>
            </div>

            <!-- Selección de Habitaciones (Multiselección) -->
            <div class="form-group">
                <label for="SelectedHabitaciones">Habitaciones</label>
                <select asp-for="Habitaciones" class="form-control" multiple="multiple">
                    @foreach (var habitacion in ViewData["Habitaciones"] as SelectList)
                    {
                        <option value="@habitacion.Value">@habitacion.Text</option>
                    }
                </select>
            </div>

            <div class="form-group">
                <input type="submit" value="Crear" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Volver al listado</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
