@model IEnumerable<CrudDF3.Models.PaquetesTuristico>

@{
    ViewData["Title"] = "Paquetes Turísticos";
}

<!-- Título de la página -->
<h1 class="text-center my-4">@ViewData["Title"]</h1>

<!-- Enlace para crear un nuevo paquete -->
<div class="text-right mb-3">
    <a asp-action="Create" class="btn btn-primary">Crear Nuevo Paquete</a>
</div>

<!-- Tabla con diseño mejorado -->
<table class="table table-striped table-bordered table-hover">
    <thead class="thead-dark">
        <tr>
            <th>@Html.DisplayNameFor(model => model.NombrePaquete)</th>
            <th>@Html.DisplayNameFor(model => model.DescripcionPaquete)</th>
            <th>@Html.DisplayNameFor(model => model.PrecioPaquete)</th>
            <th>@Html.DisplayNameFor(model => model.DisponibilidadPaquete)</th>
            <th>@Html.DisplayNameFor(model => model.FechaPaquete)</th>
            <th>@Html.DisplayNameFor(model => model.DestinoPaquete)</th>
            <th>@Html.DisplayNameFor(model => model.EstadoPaquete)</th>
            <th>@Html.DisplayNameFor(model => model.TipoViajePaquete)</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.NombrePaquete)</td>
                <td>@Html.DisplayFor(modelItem => item.DescripcionPaquete)</td>
                <td>@Html.DisplayFor(modelItem => item.PrecioPaquete)</td>
                <td>@Html.DisplayFor(modelItem => item.DisponibilidadPaquete)</td>
                <td>@Html.DisplayFor(modelItem => item.FechaPaquete)</td>
                <td>@Html.DisplayFor(modelItem => item.DestinoPaquete)</td>
                <td>@Html.DisplayFor(modelItem => item.EstadoPaquete)</td>
                <td>@Html.DisplayFor(modelItem => item.TipoViajePaquete)</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.IdPaquete" class="btn btn-warning btn-sm">Editar</a>
                    <a asp-action="Details" asp-route-id="@item.IdPaquete" class="btn btn-info btn-sm">Detalles</a>
                    <a asp-action="Delete" asp-route-id="@item.IdPaquete" class="btn btn-danger btn-sm">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<!-- Pie de página centrado -->
<div class="text-center mt-4">
    <p>&copy; 2025 - Todos los derechos reservados</p>
</div>
