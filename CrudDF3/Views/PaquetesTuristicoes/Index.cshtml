@model IEnumerable<CrudDF3.Models.PaquetesTuristico>

@{
    ViewData["Title"] = "Gestión de Paquetes Turísticos";
    Layout = "_Layout";
}

<div class="container-fluid px-4 py-3">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="mb-0">
            <i class="fas fa-suitcase me-2"></i>@ViewData["Title"]
        </h2>
        <a asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus-circle me-2"></i>Crear Paquete
        </a>
    </div>

    <div class="card shadow-sm border-0">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="bg-light">
                        <tr>
                            <th class="ps-4">Paquete</th>
                            <th>Descripción</th>
                            <th class="text-end">Precio</th>
                            <th>Servicios Incluidos</th>
                            <th>Habitaciones</th>
                            <th class="pe-4 text-end">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr class="border-top">
                                <td class="ps-4">
                                    <div class="fw-semibold">@item.NombrePaquete</div>
                                </td>
                                <td>
                                    <div class="text-muted text-truncate" style="max-width: 250px;">
                                        @item.DescripcionPaquete
                                    </div>
                                </td>
                                <td class="text-end fw-medium">
                                    @item.PrecioPaquete?.ToString("C")
                                </td>
                                <td>
                                    @if (item.PaqueteServicios?.Any() == true)
                                    {
                                        <div class="d-flex flex-wrap gap-1">
                                            @foreach (var ps in item.PaqueteServicios.Take(2))
                                            {
                                                <span class="badge bg-primary bg-opacity-10 text-primary border border-primary">
                                                    @ps.IdServicioNavigation?.NombreServicio
                                                </span>
                                            }
                                            @if (item.PaqueteServicios.Count > 2)
                                            {
                                                <span class="badge bg-secondary bg-opacity-10 text-secondary">
                                                    +@(item.PaqueteServicios.Count - 2) más
                                                </span>
                                            }
                                        </div>
                                    }
                                    else
                                    {
                                        <span class="badge bg-light text-muted">Sin servicios</span>
                                    }
                                </td>
                                <td>
                                    @if (item.PaqueteHabitaciones?.Any() == true)
                                    {
                                        <div class="d-flex flex-wrap gap-1">
                                            @foreach (var ph in item.PaqueteHabitaciones.Take(2))
                                            {
                                                <span class="badge bg-info bg-opacity-10 text-info border border-info">
                                                    @ph.IdHabitacionNavigation?.TipoHabitacion
                                                </span>
                                            }
                                            @if (item.PaqueteHabitaciones.Count > 2)
                                            {
                                                <span class="badge bg-secondary bg-opacity-10 text-secondary">
                                                    +@(item.PaqueteHabitaciones.Count - 2) más
                                                </span>
                                            }
                                        </div>
                                    }
                                    else
                                    {
                                        <span class="badge bg-light text-muted">Sin habitaciones</span>
                                    }
                                </td>
                                <td class="pe-4 text-end">
                                    <div class="btn-group btn-group-sm shadow-sm" role="group">
                                        <a asp-action="Details" asp-route-id="@item.IdPaquete"
                                           class="btn btn-outline-primary" title="Ver detalles">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@item.IdPaquete"
                                           class="btn btn-outline-secondary" title="Editar">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.IdPaquete"
                                           class="btn btn-outline-danger" title="Eliminar">
                                            <i class="fas fa-trash-alt"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .card {
            border-radius: 0.5rem;
            overflow: hidden;
        }

        .table {
            font-size: 0.9rem;
        }

            .table th {
                font-weight: 500;
                text-transform: uppercase;
                letter-spacing: 0.5px;
                font-size: 0.75rem;
                color: #6c757d;
                background-color: #f8f9fa;
            }

        .badge {
            font-weight: 400;
            padding: 0.35em 0.5em;
            font-size: 0.75em;
            border-radius: 0.25rem;
        }

        .text-truncate {
            white-space: nowrap;
            overflow: hidden;
            text-overflow: ellipsis;
        }

        .gap-1 {
            gap: 0.25rem;
        }

        .fw-semibold {
            font-weight: 500;
        }

        .btn-group-sm > .btn {
            padding: 0.25rem 0.5rem;
        }
    </style>
}

@section Scripts {
    <script>
        $(document).ready(function() {
            $('[title]').tooltip();

            // Mejora la visualización de tooltips en elementos deshabilitados
            $('.btn').on('click', function(e) {
                if ($(this).hasClass('disabled')) {
                    e.preventDefault();
                }
            });
        });
    </script>
}